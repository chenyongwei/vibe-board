{
  "name": "vibe-dashboard-server",
  "version": "0.1.0",
  "description": "Minimal central dashboard for vibe tasks across machines",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "seed": "node seed.js",
    "test": "node --test tests/*.test.js",
    "dev:api": "nodemon --watch . --ext js,json --ignore dashboard/public --ignore data --ignore node_modules --signal SIGTERM index.js",
    "dev:ui": "browser-sync start --proxy http://localhost:${PORT:-6101} --port ${UI_PORT:-6102} --files \"dashboard/public/**/*\" --no-open --no-notify",
    "dev": "concurrently -k -n API,UI -c cyan,magenta \"npm:dev:api\" \"npm:dev:ui\""
  },
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "mysql2": "^3.14.5",
    "express": "^4.18.2",
    "body-parser": "^1.20.0"
  }
}
